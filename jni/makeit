V='n'
D='n'
C=''
targets="UNIX32 ANDROID7"

Usage() {
  echo "Usage:"
  echo "$0 [-v] [-h|--help] [clean]"
  exit -1
}

while [ $# -gt 0 ]
do
  case ${1} 
  in
    -v)
      V='y';;
    -d)
      D='y';;
    clean)
      C='-c';;
    -h)
      Usage;;
    --help)
      Usage;;
    *)
      Usage;;
  esac
  shift
done

for target in ${targets}
do
  scons verbose=$V debug=$D $C target=${target} -Q
done
